<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="BookKeeper.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:BookKeeper.Views"
	xmlns:local="clr-namespace:BookKeeper">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Scan"
                      Icon="{FontImage Color={StaticResource Black}, FontFamily=FAS, Glyph=&#xf02a;}"
                      ContentTemplate="{DataTemplate views:MainPage}" />
        <ShellContent Title="Books"
                      Icon="{FontImage Color={StaticResource Black}, FontFamily=FAS, Glyph=&#xf02d;}"
                      ContentTemplate="{DataTemplate views:BookListPage}" />
    </FlyoutItem>
</Shell>
